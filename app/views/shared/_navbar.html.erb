<% if !request.params[:controller].include?("devise") %>
  <div class="navbar">
    <div>
      <%= link_to root_path, class: "navbar__logo" do %>
          ogram
      <% end %>
    </div>
    <div class ="navbar__icons">
      <% if params[:controller] == "contents" %>
      <%= render 'shared/searchBar', path: contents_path %>
      <% else %>
      <%= render 'shared/searchBar', path: root_path %>
      <% end %>
      <% if user_signed_in? %>
        <%= link_to new_user_session_path do %>
          <%= icon('fas', 'door-open') %>
        <% end %>
      <% else %>
        <%= link_to destroy_user_session_path do %>
          <%= icon('fas', 'door-closed') %>
        <% end %>
      <% end %>
      <%= link_to new_content_path do %>
        <%= icon('fas', 'plus-square') %>
      <% end %>
    </div>
  </div>
<% end %>
