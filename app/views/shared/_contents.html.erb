<% @contents.each do |content| %>
  <div class="content" id="content-<%= content.id %>">
    <div class="content__media">
      <%= render 'shared/contentMedia', content: content %>
    </div>
    <div class="content__text" >
      <div class="content__text__title">
        <%= content.description %>
      </div>
      <div class="content__text__commentForm">
        <%= render 'shared/commentForm', content: content, comment: @comment %>
      </div>
      <% if content.comments.last %>
        <div class="content__text__comment" id="last-comment-wrapper-<%= content.id %>">
          <%= render 'shared/comment', comment: content.comments.last, hide_counter: false %>
        </div>
      <% end %>
    </div>
    <div class="content__hiddenButtons">
      <%= render 'shared/contentHiddenButtons', user_view: @user_view, content: content %>
    </div>
    <div class="content__modal">
      <%= render 'shared/contentModal', content: content %>
    </div>
  </div>
<% end %>
